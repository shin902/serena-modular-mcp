{
  "name": "serena-modular-mcp",
  "version": "2.0.0",
  "description": "Modular MCP - Modular tool access for reducing context overhead",
  "type": "module",
  "bin": {
    "modular-mcp": "./dist/index.js"
  },
  "author": "shin902",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shin902/serena-modular-mcp.git"
  },
  "homepage": "https://github.com/shin902/serena-modular-mcp#readme",
  "bugs": {
    "url": "https://github.com/shin902/serena-modular-mcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "claude",
    "context-optimization"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "config.example.json"
  ],
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "run-s 'build:*'",
    "build:esbuild": "esbuild ./src/index.ts --format=esm --platform=node --bundle --packages=external --outdir=dist",
    "build:schema": "tsx ./src/scripts/generate-schema.ts",
    "lint": "run-s 'lint:*'",
    "lint:biome-format": "biome format .",
    "lint:biome-lint": "biome check .",
    "fix": "run-s 'fix:*'",
    "fix:biome-format": "biome format --write .",
    "fix:biome-lint": "biome check --write --unsafe .",
    "typecheck": "tsc --noEmit",
    "release": "release-it",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@valibot/to-json-schema": "^1.3.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.9.1",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "release-it": "^19.0.5",
    "release-it-pnpm": "^4.6.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome format --write",
      "biome check --write"
    ]
  }
}
